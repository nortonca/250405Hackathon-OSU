modules = ["python-3.12", "web", "nodejs-20", "nix"]
run = "python app.py"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npx vite preview --host 0.0.0.0 --port 5000"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5173
externalPort = 5173

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 18930440
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0"
